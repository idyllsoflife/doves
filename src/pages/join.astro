---
import BaseLayout from "@components/base/BaseLayout.astro";

// ‚îÄ‚îÄ‚îÄ Editable Data ‚îÄ‚îÄ‚îÄ
const facilities = [
  { label: "Bedrooms", value: "10", note: "(sizes vary)" },
  { label: "Kitchens", value: "1" },
  { label: "Bathrooms", value: "5", note: "(under construction)" },
  ];

const costs = [
  { label: "Carrying Charges", value: "$725 ‚Äì $840/mo" },
  { label: "Food Group", value: "$275/mo" },
  { label: "Initial Share", value: "$800 one-time" },
];

const expectations = [
  { label: "House Meetings", value: "Tuesdays" },
  { label: "Workdays", value: "Saturdays" },
  { label: "Cook Cycle", value: "Rotating" },
  { label: "Chores", value: "Shared" },
];

const applicationSteps = [
  { title: "Drop Us a Line", desc: "Email us at dovesnestchicago@gmail.com to setup an informal chat in person or via phone." }, 
  { title: "Fill Out an Application", desc: "Complete our online application form to tell us about yourself." },
  { title: "Interview at a House Dinner ", desc: "Join us for a meal to meet the current members and see the space." },
  { title: "Member Vote", desc: "Current members vote on new membership." },
  { title: "Move In!", desc: "Sign membership contract and occupancy agreement, pay initial share, and join the flock." },
];
---

<BaseLayout title="Join ‚Äî The Doves' Nest" description="Become a member of The Doves' Nest housing cooperative.">

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê JOIN HERO ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section-sm relative">
    <div class="polka-bg-sage"></div>
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10 intersect:animate-fadeUp opacity-0">
          <p class="section-label">~ join the flock ~</p>
          <h1 class="h2 mb-4">Become a Member</h1>
          <p class="mb-8 text-txt-light dark:text-darkmode-txt-light max-w-2xl leading-relaxed">
            This project is just getting started, and we‚Äôre looking for people who want to help shape it. Fair warning: living here means rolling up your sleeves ‚Äî renovating, organizing, and figuring things out together. If that sounds like your kind of thing, reach out.
          </p>

          <!-- Info cards -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Facilities -->
            <div class="window-card">
              <div class="window-card-bar">
                <span class="window-dot dot-red"></span>
                <span class="window-dot dot-yellow"></span>
                <span class="window-dot dot-green"></span>
                <span class="window-title">house facilities</span>
              </div>
              <div class="window-card-body">
                {facilities.map((item) => (
                  <div class="info-row">
                    <span class="info-label">{item.label}</span>
                    <span>
                      <span class="info-value">{item.value}</span>
                      {item.note && <span class="info-note"> {item.note}</span>}
                    </span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Costs -->
            <div class="window-card">
              <div class="window-card-bar">
                <span class="window-dot dot-red"></span>
                <span class="window-dot dot-yellow"></span>
                <span class="window-dot dot-green"></span>
                <span class="window-title">costs</span>
              </div>
              <div class="window-card-body">
                {costs.map((item) => (
                  <div class="info-row">
                    <span class="info-label">{item.label}</span>
                    <span class="info-value">{item.value}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Expectations -->
            <div class="window-card">
              <div class="window-card-bar">
                <span class="window-dot dot-red"></span>
                <span class="window-dot dot-yellow"></span>
                <span class="window-dot dot-green"></span>
                <span class="window-title">expectations</span>
              </div>
              <div class="window-card-body">
                {expectations.map((item) => (
                  <div class="info-row">
                    <span class="info-label">{item.label}</span>
                    <span class="info-value">{item.value}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê APPLICATION STEPS ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section-sm relative">
    <div class="polka-bg"></div>
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div class="mb-6 intersect:animate-fadeUp opacity-0">
            <p class="section-label">~ next steps ~</p>
            <h2 class="h3">How to Apply</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {applicationSteps.map((step, i) => (
              <div class="glass rounded-lg p-6 flex gap-4 items-start intersect:animate-fadeUp opacity-0" style={`animation-delay: ${i * 80}ms`}>
                <span class="step-num">{i + 1}</span>
                <div>
                  <h4 class="h6 mb-1">{step.title}</h4>
                  <p class="text-txt-light dark:text-darkmode-txt-light text-sm leading-relaxed">{step.desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê OTHER INFO ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section-sm relative">
    <div class="polka-bg-sage"></div>
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div class="text-center mb-6 intersect:animate-fadeUp opacity-0">
            <p class="section-label">~ good to know ~</p>
            <h2 class="h3">Other Information</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="glass rounded-lg p-5 flex gap-4 items-start intersect:animate-fadeUp opacity-0">
              <span class="flex-shrink-0 w-11 h-11 rounded-xl flex items-center justify-center text-xl bg-sage-muted">üí∞</span>
              <div>
                <h4 class="h6 mb-1">Carrying Charges, Not Rent</h4>
                <p class="text-txt-light dark:text-darkmode-txt-light text-sm leading-relaxed">The monthly fee paid by members to occupy their rooms averages $760. Rather than pay deposits and sign leases, members pay initial share prices and sign membership contracts/occupancy agreements. Members do not gain or have equity.</p>
              </div>
            </div>
            <div class="glass rounded-lg p-5 flex gap-4 items-start intersect:animate-fadeUp opacity-0" style="animation-delay: 80ms">
              <span class="flex-shrink-0 w-11 h-11 rounded-xl flex items-center justify-center text-xl" style="background: rgba(107,91,51,0.1);">üç≤</span>
              <div>
                <h4 class="h6 mb-1">Food Group</h4>
                <p class="text-txt-light dark:text-darkmode-txt-light text-sm leading-relaxed">In addition to carrying charges, members participate in food group for $275/month. This covers food and household goods, and some amount of utilities.</p>
              </div>
            </div>
            <div class="glass rounded-lg p-5 flex gap-4 items-start intersect:animate-fadeUp opacity-0" style="animation-delay: 160ms">
              <span class="flex-shrink-0 w-11 h-11 rounded-xl flex items-center justify-center text-xl bg-sage-muted">üìã</span>
              <div>
                <h4 class="h6 mb-1">Operational + Maintenance Work</h4>
                <p class="text-txt-light dark:text-darkmode-txt-light text-sm leading-relaxed">Re-starting this co-op means not just maintenance, but establishing labor systems, chore structures, officer/committee roles, and finances.</p>
              </div>
            </div>
            <div class="glass rounded-lg p-5 flex gap-4 items-start intersect:animate-fadeUp opacity-0" style="animation-delay: 240ms">
              <span class="flex-shrink-0 w-11 h-11 rounded-xl flex items-center justify-center text-xl" style="background: rgba(107,91,51,0.1);">üêæ</span>
              <div>
                <h4 class="h6 mb-1">Pets & Parking</h4>
                <p class="text-txt-light dark:text-darkmode-txt-light text-sm leading-relaxed">Pets are allowed on a case-by-case basis and require a pet deposit. The house has no parking, but you may park your car on the street.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>
