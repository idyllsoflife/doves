---
import BaseLayout from "@components/base/BaseLayout.astro";
---

<BaseLayout title="Member Portal ‚Äî The Doves' Nest" description="Member resources and training for The Doves' Nest.">

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê WELCOME ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <section class="section relative overflow-hidden">
    <div class="polka-bg-sage"></div>
    <div class="container">
      <div class="row justify-center">
        <div class="text-center lg:col-8 intersect:animate-fadeUp opacity-0">
          <span class="inline-flex items-center font-handwritten text-lg text-sage-dark bg-sage-muted px-4 py-1 rounded-full mb-6">
            ‚ú¶ member portal ‚ú¶
          </span>
          <h1 class="h2 mb-4">
            Welcome to the <span class="italic text-sage">Nest</span>
          </h1>
          <p class="text-olive-light max-w-lg mx-auto leading-relaxed">
            Welcome, new member! This is your hub for everything you need to get started, stay informed, and participate in co-op life at The Doves' Nest.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê VIDEO ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
