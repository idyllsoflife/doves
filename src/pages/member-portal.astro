          <div class="text-center mb-4 intersect:animate-fadeUp opacity-0">
            <p class="section-label">~ watch first ~</p>
            <h2 class="h3">Welcome Video</h2>
          </div>
          <div class="glass rounded-lg aspect-video flex flex-col items-center justify-center gap-4 intersect:animate-fadeUp opacity-0">
            <div class="w-16 h-16 rounded-full bg-olive flex items-center justify-center text-cream shadow-lg">
              <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24"><polygon points="6,3 20,12 6,21"/></svg>
            </div>
            <span class="font-handwritten text-olive-muted text-lg">Welcome video coming soon</span>
          </div>
        </div>
      </div>
    </div>
  </section>

